{
  "name": "mytime",
  "version": "1.0.0",
  "description": "A modern, lightweight and immutable date/time library built in TypeScript.",
  "main": "dist/mytime.cjs.js",
  "module": "dist/mytime.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/mytime.esm.js",
    "require": "./dist/mytime.cjs.js",
    "types": "./dist/types/index.d.ts"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "rollup -c",
    "prepare": "npm run build",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,js,json}'"
  },
  "keywords": [
    "date",
    "time",
    "datetime",
    "library",
    "typescript",
    "format",
    "calendar",
    "duration",
    "plugin",
    "immutable",
    "modular",
    "mytime"
  ],
  "author": "riciuuu",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/node": "^20.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-typescript2": "^0.35.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0",
    "prettier": "^3.2.0",
    "eslint": "^8.56.0"
  }
}